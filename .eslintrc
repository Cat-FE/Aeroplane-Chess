{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "$": true,
    },
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "ecmascript": 6,
        "jsx": true,
        "modules": true
    },
    "rules": {
        "indent": [2, "tab"],
        "quotes": [2, "single"],
        "no-undef": [2],
        "semi": 0,
        "no-unused-vars": [2, {vars: local}],
        "babel/generator-star-spacing": 1,
        "babel/arrow-parens": 1,
        "babel/no-await-in-loop": 1
    },
    "plugins": [
        "babel"
    ]
}
